; ********************
;	INTERRUPT HANDLER
; ********************

;	^S CAUSES CURRENT DIRECTORY TO BE PRINTED
SUMINT:	SKIPE PSIF		;IGNORE IF IN TRANSITORY STATE
	SKIPN CURDIR
	DEBRK
	PUSH P,1
	PUSH P,2
	PUSH P,3
	TMSG </ON />
	MOVEI 1,101
	MOVE 2,CURDIR
	DIRST
	JFCL
	MOVEI	1,11			;PUT OUT TAB
	PBOUT				;OUT IT
	MOVEI	1,101			;SETUP
	MOVE	2,CURDIR		;GET DIR NUMBER
	MOVEI	3,^D8			;BASE 8
	NOUT				;OUT PUT IT
	JFCL
	MOVEI 1,37
	PBOUT
	POP P,3
	POP P,2
	POP P,1
	DEBRK

BADINT:	PUSH P,1
	PUSH P,2
	PUSH P,3
	TMSG </
UNEXPECTED INTERRUPT
/>
	POP P,3
	POP P,2
	POP P,1
	DEBRK			;IGNORE IT

CONTC:	SKIPN PSIF		;IF IN TRANSITORY STATE,
	DEBRK			;IGNORE IT
	PUSH P,1
	PUSH P,2
	PUSH P,3
	SKIPN LOCKED
	JRST CONTC1
	MOVE 1,[XWD 400000,DIRORG/1000]
	MOVSI 2,140000
	SPACS
	SETOM DIRLCK
	SETZM LOCKED
	MOVSI 2,100000
	SPACS
CONTC1:	TMSG </^C
/>
	JRST QUIT

