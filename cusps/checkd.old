; ********************
;	GIVEN A DIRECTORY,CALL ROUTINES THAT VERIFY IT
; ********************

SCANFD:HRRZS A
	PUSHJ P,SETFD		; MAP THE APPROPRIATE DIRECTORY
	MOVE A,[POINT 7,DIRNAM]
	MOVEM A,DIRPTR
	MOVE B,CURDIR
	DIRST
	JFCL
	MOVEI B,0
	IDPB B,A
	MOVE A,DIRPTR
	MOVEM A,DEFDIR
	SETZM DIRERR	;ERROR PRINTOUT FLAG
	SETZM DEFNAM
	SETZM NBAD


	PUSHJ P,.SETVR	;GO VERIFY DIRECTORY STRUCTURE

	SKIPE NBAD
	JRST SCAN4
